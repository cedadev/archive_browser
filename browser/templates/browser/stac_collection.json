{
    "id": "{{path}}",
    "type": "Collection",
    "title": "{{cat_info.title}}",
    "stac_version": "1.0.0",
    "description": "{{cat_info.abstract}}",
    "properties": {
      "cat": "{{cat_info}}"
    },
    "links": [
      {
        "rel": "root",
        "href": "/stac/",
        "type": "application/json"
      },
      {
        "rel": "parent",
        "href": "/stac{{path_record.directory}}",
        "type": "application/json"
      },
      {% for directory in directories %}
      {
        "rel": "child",
        "href": "/stac{{directory}}",
        "type": "application/json",
        "title": "Subdirectory: {{directory}}"
      },
      {% endfor %}
      {% for item in items %}
      {
        "rel": "item",
        "href": "/stac{{item.path}}",
        "type": "application/json",
        "title": "Item for {{item.path}}",
        "properties": {
          {% if item.regex_date %}"datetime": "{{ item.regex_date }}" {% endif %} 
        }
      },
      {% endfor %}
      {
        "rel": "self",
        "href": "/stac{{path_record.path}}",
        "type": "application/json"
      }
    ]
  }