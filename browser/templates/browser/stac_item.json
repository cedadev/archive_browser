{
    "stac_version": "1.0.0",
    "stac_extensions": [],
    "type": "Feature",
    "id": "{{path_record.path}}",
    "bbox": [],
    "properties": {{stac_properties|safe}},
    "collection": "simple-collection",
    "links": [
      {
        "rel": "collection",
